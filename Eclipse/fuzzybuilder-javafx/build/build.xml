<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project space-builder-javafx with libraries in sub-folder">
	<!--this file was created by Eclipse Runnable JAR Export Wizard-->
	<!--ANT 1.7 is required                                        -->
	<!--define folder properties-->
	<property name="dir.buildfile" value="."/>
	<property name="dir.workspace" value="/Users/irawinder/eclipse-workspace"/>
	<property name="dir.jarfile" value="${dir.buildfile}/dist"/>
	<target name="create_run_jar">

		<!--delete all files-->
		<delete dir="${dir.jarfile}"/>
		<mkdir dir="${dir.jarfile}"/>

		<!--Make FuzzyBuilder.jar-->
		<jar destfile="${dir.jarfile}/FuzzyBuilder.jar">
			<manifest>
				<attribute name="Main-Class" value="edu.mit.ira.builder.fx.GUI_FX"/>
				<attribute name="Class-Path" value=". FuzzyBuilder_lib/javafx-swt.jar FuzzyBuilder_lib/javafx.base.jar FuzzyBuilder_lib/javafx.controls.jar FuzzyBuilder_lib/javafx.fxml.jar FuzzyBuilder_lib/javafx.graphics.jar FuzzyBuilder_lib/javafx.media.jar FuzzyBuilder_lib/javafx.swing.jar FuzzyBuilder_lib/javafx.web.jar"/>
			</manifest>
			<fileset dir="/Users/irawinder/Gits/FuzzyBuilder/Eclipse/space-builder-javafx/bin"/>
			<fileset dir="/Users/irawinder/Gits/FuzzyBuilder/Eclipse/space-builder/bin"/>
		</jar>

		<!--copy files from data to dist top level-->
		<delete dir="${dir.jarfile}/data"/>
		<mkdir dir="${dir.jarfile}/data" />
		<copy todir="${dir.jarfile}/data">
			<fileset dir="${dir.buildfile}/../data" includes="**" />
		</copy>

		<delete dir="${dir.jarfile}/lib" />
		<mkdir dir="${dir.jarfile}/lib" />
		<copy todir="${dir.jarfile}/lib">
			<fileset dir="${dir.workspace}/libraries/javafx-sdk-13/lib" includes="**" />
		</copy>
	</target>
</project>
